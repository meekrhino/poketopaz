movement mFarmerLadyApproaches {
    walk_down
    walk_right * 5
}

movement mFarmerLadyWalksBack {
    walk_slow_left * 5
    walk_slow_up
    delay_16
    face_down
}

movement mFarmerLadyEntersHouse {
    walk_up
    set_invisible
}

movement mFarmerLadyExitsHouse {
